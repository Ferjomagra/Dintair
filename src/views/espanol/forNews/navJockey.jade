extends ../templates/default

block content
  .bigContenido

    .newsField

      div.Feriadex
        img.feriadex(src='/images/logoFJockey.PNG')

      div.dayNews.col-lg-12.col-md-12.col-sm-12.col-xs-12
        if news.length
          for dataNews in news
            if dataNews.semanal == 'Feria Navideña Jockey'
              div.dataFlow.col-lg-6.col-md-6.col-sm-12.col-xs-12
                div.allNews
                  div.TandD
                
                    p.date= dataNews.dia
                    p.date de
                    p.date= dataNews.mes
                    p.date de
                    p.date= dataNews.año
                  
                  div.titular_a
                    a.titular(href='/Dintair/Newsbook/day/#{dataNews.id}')= dataNews.titular
                  
                  if dataNews.imgNews
                    a(href='/Dintair/Newsbook/day/#{dataNews.id}')
                      img.img_news(src=dataNews.imgNews)
                  else

                  p.section= dataNews.seccion