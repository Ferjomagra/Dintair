                | Buscar
            
            li.logout
              a(href='/logout') Cerrar sesión

        div.buttonsforactions
          div.createbox
            button(id='noti_Button') 
              img(src='/images/icons/xicon.png')
              | Crear

            div#notifications
              div(style='100%;')
                a(href='/Dintair/recommendations/board')
                  div.prods()
                    img(src='/images/icons/post_icon.png')
                    h3 Publicación

                a(href='/Dintair/products/add/Product')
                  div.prods()
                    img(src='/images/icons/alMayorPord.png')
                    h3 Nuevo producto

                a(href='/Dintair/services/add/Service')
                  div.prods()
                    img(src='/images/icons/truck_icon.png')
                    h3 Nuevo Servicio

                if user.username == 'aeropost.lim@aeropost.com'
                  a(href='/Dintair/restricted')
                    div.servs()
                      img(src='/images/icons/contacts_n.png')
                      h3 Producto restringido




